<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.features.auth.LoginFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/formContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp">

        <TextView
            android:id="@+id/emailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/txEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_edittext_primary"
            android:hint="Nhập email"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="user@gmail.com"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toBottomOf="@+id/emailTitle"
            tools:layout_editor_absoluteX="0dp" />


        <TextView
            android:id="@+id/emailError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_light"
            android:visibility="visible"
            android:textSize="13sp"
            android:paddingTop="4dp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/txEmail"
            app:layout_constraintStart_toStartOf="@id/txEmail"/>

        <TextView
            android:id="@+id/passwordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@id/txEmail"
            app:layout_constraintStart_toStartOf="@id/txEmail"/>


        <RelativeLayout
            android:id="@+id/passwordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/passwordTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Nhập mật khẩu"
                android:inputType="textPassword"
                android:background="@drawable/bg_edittext_primary"
                android:textSize="14sp"
                android:text="123456"
                android:textColor="@color/black"
                android:maxLines="1"
                android:imeOptions="actionNext" />

            <ImageView
                android:id="@+id/currentPasswordToggle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_eye_off"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Toggle password visibility"
                android:padding="4dp"
                android:layout_marginEnd="16dp"
                app:tint="@color/grey_dark" />
        </RelativeLayout>

        <TextView
            android:id="@+id/forgotPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="@color/yellow_dark"
            android:fontFamily="sans-serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordInputLayout"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button_payment"
            style="@style/Widget.AppCompat.Button"
            android:text="Đăng nhập"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/forgotPasswordText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendEmailVerify"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button_white_primary"
            style="@style/Widget.AppCompat.Button"
            android:text="Gửi lại email xác minh"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textColor="@color/grey_dark"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <LinearLayout
            android:id="@+id/titleOr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnSendEmailVerify">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/grey_200"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOẶC"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAllCaps="true"
                android:textColor="@color/grey_200"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/grey_200"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginGoogle"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button_circle_primary"
            android:drawableStart="@drawable/icon_logo_google"
            android:fontFamily="sans-serif"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Đăng nhập bằng Google"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/titleOr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/btnLoginGoogle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/view_progress_overlay"
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/successBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:text="Thành công!"
        android:gravity="center"
        android:visibility="gone"
        android:translationY="-100dp"
        android:elevation="4dp"
        android:textStyle="bold"
        android:textSize="14sp"/>
</FrameLayout>