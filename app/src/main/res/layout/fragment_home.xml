<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.features.home.HomeFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/layoutBanner"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vpBanner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <include
                        layout="@layout/view_shimmer_banner"
                        android:id="@+id/shimmerBanner"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>

                <ImageView
                    android:id="@+id/cartTitle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:src="@drawable/logo"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/headerPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toBottomOf="@id/cartTitle"/>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/grey_100"
                    app:layout_constraintTop_toBottomOf="@id/layoutBanner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:id="@+id/layoutPopularTabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/view2">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayoutPopular"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        app:tabIndicatorColor="@color/primary"
                        app:tabMode="scrollable" />

                    <!-- Container để switch giữa shimmer và list -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/vpPopular"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/tabLayoutPopular"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <include
                            android:id="@+id/shimmerPopular"
                            layout="@layout/view_shimmer_books"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </FrameLayout>

                    <!-- Nút Xem thêm -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSeeMorePopular"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Xem thêm"
                        android:textAllCaps="false"
                        android:textColor="@color/primary"
                        android:background="@drawable/bg_btn_see_more"
                        android:layout_gravity="center_horizontal"
                        android:paddingStart="40dp"
                        android:paddingEnd="40dp"
                        android:textSize="14sp"/>

                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/grey_100"
                    app:layout_constraintTop_toBottomOf="@id/layoutPopularTabs"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:id="@+id/layoutPriceTabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/view1">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayoutPrice"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        app:tabIndicatorColor="@color/primary"
                        app:tabMode="scrollable" />

                    <!-- Container để switch giữa shimmer và list -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/vpPriceBooks"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/tabLayoutPrice"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <!-- Shimmer loading (optional) -->
                        <include
                            layout="@layout/view_shimmer_books"
                            android:id="@+id/shimmerPrice"
                            android:visibility="visible"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"/>
                    </FrameLayout>
                    <!-- RecyclerView cho danh sách sách -->


                    <!-- Nút Xem thêm -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSeeMorePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Xem thêm"
                        android:textAllCaps="false"
                        android:textColor="@color/primary"
                        android:background="@drawable/bg_btn_see_more"
                        android:layout_gravity="center_horizontal"
                        android:paddingStart="40dp"
                        android:paddingEnd="40dp"
                        android:textSize="14sp"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/cartTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                android:layout_weight="1"
                android:background="@color/white_full"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/layoutSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white_full"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/grey_dark" />

                    <TextView
                        android:id="@+id/searchFakeInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tìm kiếm sách..."
                        android:fontFamily="sans-serif"
                        android:background="@color/white_full"
                        android:textColor="@color/grey_dark"
                        android:paddingStart="12dp"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/searchClickOverlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@id/searchBar"
                app:layout_constraintBottom_toBottomOf="@id/searchBar"
                app:layout_constraintStart_toStartOf="@id/searchBar"
                app:layout_constraintEnd_toEndOf="@id/searchBar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/notificationBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_notification"
            android:background="@android:color/transparent"
            app:tint="@color/white"
            android:padding="10dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>
</FrameLayout>