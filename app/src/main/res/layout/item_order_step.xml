<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/ivStepIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_ship"
        android:padding="6dp"
        android:scaleType="centerInside"
        app:tint="@color/pink_primary"
        android:background="@drawable/bg_circle_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/ivStepIcon"
        app:layout_constraintStart_toStartOf="@id/ivStepIcon"
        app:layout_constraintEnd_toEndOf="@id/ivStepIcon">

        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/ic_dot_sinlge"
            app:tint="@color/pink_primary"/>


        <Space
            android:layout_width="0dp"
            android:layout_height="4dp"/>

        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/ic_dot_sinlge"
            app:tint="@color/pink_primary"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="4dp"/>
        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/ic_dot_sinlge"
            app:tint="@color/pink_primary"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ivStepIcon"
        app:layout_constraintTop_toTopOf="@id/ivStepIcon">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvStepTitle"
            android:text="Đơn hàng mới"
            android:textStyle="bold"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tvUpdatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian"
            android:layout_marginTop="4dp"
            android:textSize="8sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_unknown"
        app:tint="@color/green_accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivStepIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivStepIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>
