<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.features.auth.RegisterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_background"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp">

            <TextView
                android:id="@+id/nameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_edittext_primary"
                android:hint="@string/hint_ten"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toBottomOf="@+id/nameTitle"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/nameError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_light"
                android:visibility="visible"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif"
                app:layout_constraintTop_toBottomOf="@id/nameText"
                app:layout_constraintStart_toStartOf="@id/nameText"/>

            <TextView
                android:id="@+id/emailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_marginTop="26dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/nameText"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_edittext_primary"
                android:hint="@string/hint_email"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toBottomOf="@+id/emailTitle"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/emailError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_light"
                android:visibility="visible"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif"
                app:layout_constraintTop_toBottomOf="@id/emailText"
                app:layout_constraintStart_toStartOf="@id/emailText"/>

            <TextView
                android:id="@+id/passwordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@id/emailText"
                app:layout_constraintStart_toStartOf="@id/emailText"/>

            <RelativeLayout
                android:id="@+id/passwordInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/passwordTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Nhập mật khẩu"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_edittext_primary"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:imeOptions="actionNext" />

                <ImageView
                    android:id="@+id/currentPasswordToggle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_eye_off"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Toggle password visibility"
                    android:padding="4dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/grey_dark" />
            </RelativeLayout>

            <TextView
                android:id="@+id/passwordError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_light"
                android:visibility="visible"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif"
                app:layout_constraintTop_toBottomOf="@id/passwordInputLayout"
                app:layout_constraintStart_toStartOf="@id/passwordInputLayout"/>

            <TextView
                android:id="@+id/confirmPasswordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận mật khẩu"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@id/passwordInputLayout"
                app:layout_constraintStart_toStartOf="@id/passwordInputLayout"/>


            <RelativeLayout
                android:id="@+id/confirmPasswordInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/confirmPasswordTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Nhập lại mật khẩu"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_edittext_primary"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:imeOptions="actionNext" />


                <ImageView
                    android:id="@+id/confirmPasswordToggle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_eye_off"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Toggle password visibility"
                    android:padding="4dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/grey_dark" />
            </RelativeLayout>

            <TextView
                android:id="@+id/confirmPasswordError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_light"
                android:visibility="visible"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif"
                app:layout_constraintTop_toBottomOf="@id/confirmPasswordInputLayout"
                app:layout_constraintStart_toStartOf="@id/confirmPasswordInputLayout"/>

            <TextView
                android:id="@+id/phoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@id/confirmPasswordInputLayout"
                app:layout_constraintStart_toStartOf="@id/confirmPasswordInputLayout"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phoneText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:hint="@string/hint_so_dien_thoai"
                android:inputType="phone"
                android:background="@drawable/bg_edittext_primary"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toBottomOf="@+id/phoneTitle"/>

            <TextView
                android:id="@+id/phoneError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_light"
                android:visibility="visible"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif"
                app:layout_constraintTop_toBottomOf="@id/phoneText"
                app:layout_constraintStart_toStartOf="@id/phoneText"/>


            <TextView
                android:id="@+id/txWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/note_password"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:textAllCaps="false"
                android:textColor="@color/yellow_light"
                app:layout_constraintTop_toBottomOf="@id/phoneError"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:enabled="false"
                android:background="@drawable/bg_button_payment"
                style="@style/Widget.AppCompat.Button"
                android:text="Đăng ký"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/txWarning"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/signUpText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/btnLogin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/signUpText"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <TextView
        android:id="@+id/successBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:text="Thành công!"
        android:gravity="center"
        android:visibility="gone"
        android:translationY="-100dp"
        android:elevation="4dp"
        android:textStyle="bold"
        android:textSize="14sp"/>
</FrameLayout>