<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".presentation.features.auth.ResetPasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Đặt lại mật khẩu"
            android:background="@color/primary"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_left"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/icon_tint_selector"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:contentDescription="Quay lại"
            app:layout_constraintStart_toStartOf="@id/Title"
            app:layout_constraintTop_toTopOf="@id/Title"
            app:layout_constraintBottom_toBottomOf="@id/Title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/newPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu mới"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="26dp" />

    <RelativeLayout
        android:id="@+id/newPasswordInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/newPasswordLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/newPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext_primary"
            android:fontFamily="sans-serif"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_dark"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/newPasswordToggle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_eye_off"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Toggle password visibility"
            android:padding="4dp"
            android:layout_marginEnd="16dp"
            app:tint="@color/grey_dark" />

    </RelativeLayout>

    <TextView
        android:id="@+id/newPasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_light"
        android:visibility="visible"
        android:textSize="13sp"
        android:maxLines="1"
        android:paddingTop="4dp"
        android:fontFamily="sans-serif"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/newPasswordInputLayout"
        app:layout_constraintStart_toStartOf="@id/newPasswordInputLayout"/>

    <!-- Re-Type New Password Section -->
    <TextView
        android:id="@+id/reNewPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận mật khẩu mới"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/newPasswordInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="26dp" />

    <RelativeLayout
        android:id="@+id/reNewPasswordInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/reNewPasswordLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/reNewPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_edittext_primary"
            android:hint="Nhập lại mật khẩu mới"
            android:textColorHint="@color/grey_dark"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/reNewPasswordToggle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_eye_off"
            android:contentDescription="Toggle password visibility"
            android:padding="4dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            app:tint="@color/grey_dark" />

    </RelativeLayout>

    <TextView
        android:id="@+id/reNewPasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_light"
        android:visibility="visible"
        android:textSize="13sp"
        android:paddingTop="4dp"
        android:maxLines="1"
        android:fontFamily="sans-serif"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/reNewPasswordInputLayout"
        app:layout_constraintStart_toStartOf="@id/reNewPasswordInputLayout"/>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/layout_bottom_container"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>